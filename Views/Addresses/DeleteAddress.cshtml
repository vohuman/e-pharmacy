@using DrYahya.Models
@model DrYahya.Models.Data.Address

@{
    ViewBag.Title = "Delete Address";
}

<div class="row container col-12">
    <div class="col-4"></div>
    <div class=" col-8 text-left" style="margin:2%; padding-right: 5%; margin-left:5%;">

        <div style="margin-left: 35%;">
            <h3 class="text-center text-primary">Are you sure about deleting this address?</h3>
            <br />
            <div class="col-lg-12 h5">
                <div class="row">
                    <div class="col-md-9">
                        <label for="FName">Address :</label>
                        <span class="text-black">@Model.AddressContent</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <label for="FName">Postal Code :</label>
                        <span class="text-black">@Model.PostCode</span>
                    </div>
                </div>
                <br />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color row col-12" style="padding: 1%; margin-top: 5%;">

                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <button type="button" class="btn btn-primary btn-lg" style="margin-right: 40%;" data-toggle="modal" data-target="#myModal">Delete</button>

                        @if (TempData["UserMessage"] != null)
                        {
                            var message = (MessageVM)TempData["UserMessage"];
                            <p class="alert @message.CssClassName" id="userMessage" style="margin-top:50px;">
                                @message.Message
                                <b class="close float-left" id="userMessagebtn" style="cursor:pointer;">&times;</b>
                            </p>
                        }

                        <!-- Modal -->
                        <div id="myModal" class="modal fade" role="dialog" style="margin:50px; padding:20px;">
                            <div class="modal-dialog" style="margin-top:50px; padding-top:20px; width:800px;">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body text-center" style="margin:5%; padding: 5%;">

                                        <h1 class="text-black h2">Are you sure about deleting the address?</h1>
                                    </div>
                                    <div class="modal-footer text-center h4" style="padding: 5%;">

                                        <input type="submit" value="Yes" class="btn btn-danger btn-lg" style="margin-left:4%;" />&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button type="button" class="btn btn-default btn-lg" style="margin-right:4%;" data-dismiss="modal">No</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>