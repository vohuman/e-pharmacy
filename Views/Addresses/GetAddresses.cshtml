@model IEnumerable<DrYahya.Models.Data.Address>
@{
    ViewBag.Title = "LIst of Addresses";
}

<div class="py-3">
    <div class="container">
        <div class="row text-left">
            <div class="col-md-12 mb-0">
                <div class="col-md-12 mb-0">
                    <div class="col-md-12 mb-0">
                        @Html.ActionLink("Home", "Index", "Home") <span class="mx-2 mb-0">\</span> <strong class="text-black"> Addresses of @ViewBag.Client </strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row text-left">
        <div class="col-md-12 mb-0">
            <div class="col-md-12 mb-0">
                <div class="col-md-12 mb-0">
                    <h5  style="margin:0px; padding: 20px; margin-top:20px;"><a class="btn btn-outline-danger" href="/Addresses/NewAddress">Add a new address</a></h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section" style="margin-top:-50px;">
    <div class="container" style="margin-top:0px;">
        <div class="row col-12" style="margin-top:0px;">
            <form class="col-md-12" id="frmCart" method="post">
                @Html.AntiForgeryToken()
                <div class="site-blocks-table">
                    @foreach (var item in Model)
                    {
                    <div class="row col-10 bg-light border" style="margin:10px; padding: 10px; margin-top:0px;">
                        <div class="col-4 text-black">
                            @item.AddressContent
                        </div>
                        <div class="col-2 text-black">
                            @item.PostCode
                        </div>
                        <div class="row col-6" style="padding-right:150px;">
                            <a href="/Addresses/EditAddress/@item.ID" id="editADRS" data-id="@item.ID" title="Edit" class="col-6" style="padding:0px; margin:0px;"><span class="fa fa-pencil-alt"></span>&nbsp;Edit</a>
                            <a href="/Addresses/DeleteAddress/@item.ID" id="removeADRS" data-id="@item.ID" title="Remove" class="col-6" style="padding:0px; margin:0px;"><span class="fa fa-trash-alt"></span>&nbsp;Remove</a>
                        </div>
                    </div>
                    }
                </div>
            </form>
        </div>


    </div>
</div>