@using DrYahya.Models
@model DrYahya.Models.Data.Customer

@{
    ViewBag.Title = "حذف اکانت";
}

<div class="row container col-12">
    <div class="col-2"></div>
    <div class=" col-10 text-justify" style="margin:2%; padding-right: 5%; margin-right:8%;">

        <div style="margin-right: 5%;">
            <h3 class="text-primary">Are you sure to <b>delete</b> your account?</h3>
            <br />
            <div class="col-lg-12 h5">
                <div class="row">
                    <div class="col-md-6">
                        <label for="FName">First Name :</label>
                        <span class="text-black">@Model.FName</span>
                    </div>
                    <div class="col-md-6">
                        <label for="LName">Last Name :</label>
                        <span class="text-black">@Model.LName</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <label for="Email">E-mail :</label>
                        <span class="text-black">@Model.Email</span>
                    </div>
                    <div class="col-md-6">
                        <label for="Phone">Phone :</label>
                        <span class="text-black">@Model.Phone</span>
                    </div>
                </div>
                <br />

            </div>



            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color row col-12" style="padding: 1%; margin-top: 5%;">

                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="button" class="btn btn-primary btn-lg" style="margin-right: 40%;" data-toggle="modal" data-target="#myModal">Delete</button>

                    @if (TempData["UserMessage"] != null)
                    {
                        var message = (MessageVM)TempData["UserMessage"];
                        <p class="alert @message.CssClassName" id="userMessage" style="margin-top:50px;">
                            @message.Message
                            <b class="close float-left" id="userMessagebtn" style="cursor:pointer;">&times;</b>
                        </p>
                    }

                    <!-- Modal -->
                    <div id="myModal" class="modal fade text-left" role="dialog" style="margin:50px; padding:20px;">
                        <div class="modal-dialog" style="margin-top:50px; padding-top:20px;">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body text-center" style="margin:5%; padding: 5%;">

                                    <h1 class="text-black h2">Are you sure to delete your account?</h1>
                                </div>
                                <div class="modal-footer text-center h4" style="padding: 5%;">

                                    <input type="submit" value="Yes" class="btn btn-danger btn-lg" style="margin-left:4%;" />&nbsp;&nbsp;
                                    <button type="button" class="btn btn-default btn-lg" style="margin-right:4%;" data-dismiss="modal">No</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>