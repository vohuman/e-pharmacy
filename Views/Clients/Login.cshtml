@using DrYahya.Models
@model DrYahya.Models.Data.Customer
@{
    ViewBag.Title = "Login";
}

<div class="py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <div class="row text-left">
                    <div class="col-md-12 mb-0">@Html.ActionLink("Home", "Index", "Home") <span class="mx-2 mb-0">\</span> <strong>Login</strong></div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="site-section">
    <div class="container col-6 text-left">
        <form method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row col-12">
                <div class="col-3">
                    <label class="control-label text-center">Phone:</label>
                </div>
                <div class="col-9">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", dir = "ltr" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row col-12">
                <div class="col-3">
                    <label class="control-label text-center">Password:</label>
                </div>
                <div class="col-9">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="text-center" style="margin-right:50px; padding-right:50px;">
                <button type="submit" class="btn btn-outline-primary col-4">Log in</button>
            </div>
            @if (TempData["UserMessage"] != null)
            {
                var message = (MessageVM)TempData["UserMessage"];
                <p class="alert @message.CssClassName" id="userMessage" style="margin-top:50px;">
                    @message.Message
                    <b class="close float-left" id="userMessagebtn" style="cursor:pointer;">&times;</b>
                </p>
            }
        </form>
    </div>
</div>
