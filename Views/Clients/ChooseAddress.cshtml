@using DrYahya.Models
@model IEnumerable<SelectListItem>

@{
    ViewBag.Title = "نشانی های " + ViewBag.Client;

}

<div class="site-section">
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row col-12">
                <div class="row col-8">
                    @{
                        bool i = true;
                    }
                    @foreach (SelectListItem item in Model)
                    {
                        if (i)
                        {
                            i = !i;
                            <div class="row col-10 bg-light border" style="margin:1%; padding: 1%;">
                                <input type="radio" name="chosenAddress" checked="checked" value="@item.Value" />&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-black">@item.Text</span> <br />
                            </div>
                        }
                        <div class="row col-10 bg-light border" style="margin:1%; padding: 1%;">
                            <input type="radio" name="chosenAddress" value="@item.Value" />&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-black">@item.Text</span> <br />
                        </div>
                    }
                </div>

                <div class="form-group col-4">
                    <div class="col-md-offset-2 col-md-10 text-center">
                        <input type="submit" value="انتخاب" class="btn btn-outline-primary btn-lg col-md-12" />
                    </div>
                </div>

            </div>
        }

    </div>
</div>